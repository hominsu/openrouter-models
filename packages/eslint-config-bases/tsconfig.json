{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "allowJs": true,
    "checkJs": true
  },
  "exclude": ["node_modules", "dist", "build"],
  "include": [".eslintrc.*", "**/*.ts", "**/*.js", "**/*.cjs", "**/*.mjs", "**/*.json"]
}
